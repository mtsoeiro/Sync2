<UserControl x:Class="EcwidSync.Modules.Suppliers.Views.SuppliersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:conv="clr-namespace:EcwidSync.Modules.Suppliers.Converters"
             mc:Ignorable="d"
             d:DesignWidth="900" d:DesignHeight="560">

    <UserControl.Resources>
        <!-- built-in WPF converter; sem dependências externas -->
        <conv:BoolToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="500"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>
        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <ui:Button Content="Importar ALSO…" Command="{Binding ImportAlsoCommand}" />
            <ui:Button Content="Importar EET…"  Command="{Binding ImportEetCommand}"  />
            <ui:ProgressRing Width="22" Height="22"
                             Margin="8,0,0,0"
                             Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"/>
        </StackPanel>


        
            <Grid Grid.Row="1" >
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <DataGrid ItemsSource="{Binding DbRecords}" Grid.Row="0"
                          IsReadOnly="True"
                          EnableRowVirtualization="True"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.ScrollUnit="Pixel"
                          AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="SKU" Binding="{Binding Sku}" Width="2*"/>
                        <DataGridTextColumn Header="Nome" Binding="{Binding Name}" Width="5*"/>
                        <DataGridTextColumn Header="Preço" Binding="{Binding Price, StringFormat={}{0:N2}}" Width="*"/>
                        <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="*"/>
                        <DataGridTextColumn Header="Importado" Binding="{Binding ImportedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Width="2*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <ui:ProgressRing Width="32" Height="32" Grid.Row="1"
                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                 Visibility="{Binding DbIsBusy, Converter={StaticResource BoolToVis}}"/>
            </Grid>
      
        <!-- Estado -->
        <ui:Card Grid.Row="2" Padding="10" Margin="0,10,0,10">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>

                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding Status}" Grid.Column="0" Margin="0,0,12,0" VerticalAlignment="Center" />
                <TextBlock Text="{Binding LastFile}" Grid.Column="1" VerticalAlignment="Center"
                   TextTrimming="CharacterEllipsis" ToolTip="{Binding LastFile}" />
                <TextBlock Text="Registos:" Grid.Column="2" Margin="12,0,6,0" Opacity=".7" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding LastImported}" Grid.Column="3" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBlock Text=" · " Grid.Column="4" Opacity=".5" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding LastImportedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Grid.Column="5"
                   VerticalAlignment="Center" Opacity=".8"/>
            </Grid>
        </ui:Card>





        <!-- Área de ajuda / drop (opcional) -->
        <Border Grid.Row="2" BorderBrush="#24FFFFFF" BorderThickness="1" CornerRadius="10" Padding="18"
                AllowDrop="True" Drop="OnDrop" DragOver="OnDragOver">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                <TextBlock Text="Arraste aqui um ficheiro ALSO (.txt) ou EET (.csv)"
                           Opacity=".85" FontSize="14" />
                <TextBlock Text="ou use os botões acima para escolher o ficheiro."
                           Opacity=".6" FontSize="12" />
                <TextBlock Text="(Deteção automática por extensão/nome do ficheiro)"
                           Opacity=".45" FontSize="11" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
