<UserControl x:Class="EcwidSync.Shell.Dashboard.DashboardPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <StackPanel >
        <TextBlock Text="Dashboard" FontSize="18" FontWeight="SemiBold" />
        <Separator/>

        <!-- Relógio -->
        <StackPanel Orientation="Horizontal" >
            <ui:SymbolIcon Symbol="Clock24"/>
            <TextBlock Text="Hora:" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding NowFormatted}" Foreground="White"/>
        </StackPanel>

        <!-- Estado BD -->
        <StackPanel Orientation="Horizontal">
            <ui:SymbolIcon Symbol="Database24"/>
            <TextBlock Text="BD:" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding DbStatusText}"/>
            <Ellipse Width="10" Height="10" Margin="8,0,0,0">
                <Ellipse.Fill>
                    <SolidColorBrush Color="{Binding DbStatusColor}"/>
                </Ellipse.Fill>
            </Ellipse>
            <ui:Button Content="Testar" Command="{Binding CheckDbCommand}" Appearance="Primary"/>
        </StackPanel>

        <!-- Métricas -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Padding="8" CornerRadius="8" Background="{DynamicResource UiControlFillColorSubtleBrush}">
                <StackPanel>
                    <TextBlock Text="Produtos na BD" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding ProductCount}" FontSize="20" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Padding="8" CornerRadius="8" Background="{DynamicResource UiControlFillColorSubtleBrush}" Margin="8,0,0,0">
                <StackPanel>
                    <TextBlock Text="Última sync" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding LastSyncFormatted}" />
                </StackPanel>
            </Border>
        </Grid>
    </StackPanel>
</UserControl>
