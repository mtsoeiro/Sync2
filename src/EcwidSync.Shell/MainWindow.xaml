<ui:FluentWindow x:Class="EcwidSync.Shell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:views="clr-namespace:EcwidSync.Shell.Dashboard"
        Background="{DynamicResource ApplicationBackgroundBrush}"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        Height="750" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <ui:TitleBar x:Name="AppTitleBar" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Title="Ecwid Sync" Height="40" Margin="0,0,0,8">
            <ui:TitleBar.TrailingContent>
                <ui:Button Content="Dashboard" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5" Click="ToggleDashboard_Click" Appearance="Info" />
            </ui:TitleBar.TrailingContent>
        </ui:TitleBar>
        <ui:NavigationView x:Name="RootNav" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" IsBackButtonVisible="Collapsed" />
        <ui:SnackbarPresenter Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" x:Name="AppSnackbar" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="16" />
        
        <Grid x:Name="DashboardOverlay" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="16" Visibility="Collapsed" IsHitTestVisible="True">
            <Border Background="{DynamicResource UiControlFillColorDefaultBrush}" CornerRadius="12" Padding="12" Effect="{DynamicResource UiShadowDepth3}" BorderBrush="White" BorderThickness="2">
                <!-- O teu painel de dashboard -->
                <views:DashboardPanel x:Name="DashPanel"/>
            </Border>
        </Grid>
    </Grid>
</ui:FluentWindow>
